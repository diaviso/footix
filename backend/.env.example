# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/footix"

# JWT
JWT_SECRET="your-very-long-and-secure-jwt-secret-key-here"
JWT_EXPIRES_IN="7d"

# Google OAuth2
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="https://your-app.railway.app/auth/google/callback"

# App (PORT is set automatically by Railway)
PORT=3000
FRONTEND_URL="https://your-frontend-url.com"

# Mail (for email notifications)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=465
MAIL_SECURE=true
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM="Footix <your-email@gmail.com>"
